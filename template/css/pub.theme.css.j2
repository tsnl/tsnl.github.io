body {
  background-color: gainsboro;
}

.main {
  margin-left: auto;
  margin-right: auto;
  min-height: 100vh;
  max-width: 800px;
  font-family: sans-serif;
  font-size: 1em;
  box-shadow: inset gray;
  background-color: whitesmoke;
  padding: 0 1em 0 1em;
}

h1 {
  font-family: sans-serif;
  font-size: 4em;
  font-weight: bold;
  margin: auto;
  padding: 0.33em;
  text-align: center;
}
h2 {
  font-family: sans-serif;
  font-size: 3em;
}
h3 {
  font-family: sans-serif;
  font-size: 2em;
}
h4 {
  font-size: 1em;
}

p, li {
  padding: 0.4em 0;
}
ul {
  list-style: disc;
  margin-left: 0;
  padding-left: 1.5em;
}

hr {
  border: 1px solid black;
  margin: 0 0 1em 0;
  padding: 0;
}